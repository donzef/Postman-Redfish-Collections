		{
			"name": "UpdateService Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "43481402-97ba-4d30-9a28-bc6e14228909",
						"exec": [
							"// Make sure we'll work on a suitable response.",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response includes Oem\", function () {",
							"    pm.expect(pm.response.json()).to.include.keys(\"Oem\");",
							"});",
							"",
							"// Extract values from the response.",
							"let FlashProgressPercent = pm.response.json().Oem.Hpe.FlashProgressPercent;",
							"let UpdateServiceState = pm.response.json().Oem.Hpe.State;",
							"",
							"",
							"// Create Postman environment variables",
							"pm.environment.set('UpdateServiceState', UpdateServiceState);",
							"pm.environment.set('FlashProgressPercent', FlashProgressPercent);",
							""
						],
						"type": "text/javascript"
					}
				}
